<div class="jumbotron">
  <h1>Stylist: <%= @stylist.name() %></h1>
</div>

<div class="well">
  <% if @clients.any?() %>
  <h3>Here are the clients for this stylist:</h3>

  <ul class="well">
    <% @clients.each() do |client|
      if client.stylist_id == ((@stylist.id()))%>
        <li><%= client.name() %> </li>
      <% end %>
    <% end %>
  </ul>
  <% else %>
  <h4>There are no clients yet</h4>
  <% end %>
</div>

<div class="well">
  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="re_name">Rename stylist:</label>
    <input id="re_name" name="re_name" type="text">

    <button type="submit">Update</button>
  </form>
</div>
<div class="container">
  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit">Delete</button>
  </form><br>
  <a href="/"><button class="">Home</a>
</div>
